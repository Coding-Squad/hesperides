#!groovy

@Library(["notifications"]) _

pipeline {
    agent {
        node {
            label 'default||master'
        }
    }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }
    triggers {
        cron('0 2 * * 1-5')
    }
    parameters {
        string(name: "PLATFORM", description: "OBLIGATOIRE : Plateforme sur laquelle sera fait le d√©ploiement", defaultValue: "REL1")
    }
    stages {
        stage('Launch nigthly job') {
            steps {
                build job: "deploy", parameters: [[$class: 'StringParameterValue', name: 'PLATFORM', value: params.PLATFORM]]
            }
        }
    }
    post {
        always {
            deleteDir()
        }
        changed {
            script {
                if (currentBuild.currentResult == 'SUCCESS') {
                    color = "green"
                    icone_name = "ok"
                } else {
                    color = "red"
                    icone_name = "ko"
                }
                sendMsgToHipchat(
                        authToken: "4ktMQmKZMYbKYqBkuaCjdnnyEau6vj8k2A8Foq6t",
                        roomNumber: "4191687",
                        proxy: "http://proxy-lil:80",
                        title: "${JOB_NAME}",
                        message: "Job Status : ${currentBuild.currentResult}",
                        url: "${BUILD_URL}",
                        debug: false,
                        color: "$color",
                        iconName: "$icone_name"
                )
            }
        }
    }
}