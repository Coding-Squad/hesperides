#!groovy

@Library(["notifications"]) _

pipeline {
    agent {
        node {
            label 'default||master'
        }
    }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }
    triggers {
        cron('0 1 * * 1-5')
    }
    parameters {
        string(name: 'DOCKER_TAG', defaultValue: 'feature_springboot', description: 'Docker tag\'s name')
    }
    stages {
        stage('Launch nigthly job') {
            steps {
                build job: "build_docker_image", parameters: [[$class: 'StringParameterValue', name: 'DOCKER_TAG', value: params.DOCKER_TAG]]
            }
        }
    }
    post {
        always {
            deleteDir()
        }
        changed {
            script {
                if (currentBuild.currentResult == 'SUCCESS') {
                    color = "green"
                    icone_name = "ok"
                } else {
                    color = "red"
                    icone_name = "ko"
                }
                sendMsgToHipchat(
                        authToken: "y5Wookis5ygwBWudp6iucYVXfJ1jdglCOr5yb3tH",
                        roomNumber: "4234577",
                        proxy: "http://proxy-lil:80",
                        title: "${JOB_NAME}",
                        message: "Job Status : ${currentBuild.currentResult}",
                        url: "${BUILD_URL}",
                        debug: false,
                        color: "$color",
                        iconName: "$icone_name"
                )
            }
        }
    }
}
