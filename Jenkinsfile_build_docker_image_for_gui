#!groovy

@Library(["notifications"]) _

pipeline {
    agent {
        node {
            label 'docker'
        }
    }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }
    triggers {
        // BEFORE deploy crons
        cron('0 1 * * 1-5')
    }
    parameters {
        string(name: 'DOCKER_TAG', defaultValue: 'latest', description: 'Branch or version tag starting with a "v"')
    }
    stages {
        stage('Build docker image') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'usl_ci', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                        sh "docker login --username ${USERNAME} --password '${PASSWORD}' hesperides-docker-all.artifact.cloud.socrate.vsct.fr"
                        sh "docker build --no-cache --pull --label tuyauterie_git_commit=${GIT_COMMIT} --build-arg http_proxy=${http_proxy} --build-arg https_proxy=${http_proxy} --build-arg DOCKER_TAG=${params.DOCKER_TAG} ./vsct-hesperides-gui -t hesperides-docker-all.artifact.cloud.socrate.vsct.fr/hesperides/vsct-hesperides-gui:${params.DOCKER_TAG}"
                        // Displaying all the labels of the image:
                        sh "docker inspect --format '{{.ContainerConfig.Labels}}' hesperides-docker-all.artifact.cloud.socrate.vsct.fr/hesperides/vsct-hesperides-gui:${params.DOCKER_TAG}"
                        sh "docker push hesperides-docker-all.artifact.cloud.socrate.vsct.fr/hesperides/vsct-hesperides-gui:${params.DOCKER_TAG}"
                    }
                }
            }
        }
    }
    post {
        always {
            deleteDir()
        }
    }
}
