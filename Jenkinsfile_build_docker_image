#!groovy

@Library(["notifications"]) _

/**
 * Pipeline de création de l'image Docker pour VSCT :
 * Récupère l'image Docker du Dockerhub pour la surcharger
 * avec le certificat de l'Active Directory,
 * et la pusher vers le dépôt VSCT (Artifactory).
 */

pipeline {
    agent {
        node {
            label 'docker'
        }
    }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }
    parameters {
        string(name: 'DOCKER_TAG', defaultValue: 'develop', description: 'Docker tag\'s name')
    }
    stages {
        stage('Build docker image') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'artifactory-adm', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                        docker.withRegistry("http://docker-vsct.pkg.cloud.socrate.vsct.fr") {
                            sh "docker login --username ${USERNAME} --password '${PASSWORD}' docker-vsct.pkg.cloud.socrate.vsct.fr"
                            sh "docker build --force-rm --no-cache --pull --build-arg http_proxy=${http_proxy} --build-arg https_proxy=${http_proxy} --build-arg DOCKER_TAG=${params.DOCKER_TAG} ./docker -t hesperides/hesperides:${params.DOCKER_TAG}"
                            dockerImage = docker.image("hesperides/hesperides:${params.DOCKER_TAG}")
                            dockerImage.push()
                        }
                    }
                }
            }
        }
    }
}
