#!groovy

@Library(["notifications"]) _

/**
 * Pipeline de création de l'image Docker pour VSCT :
 * Récupère l'image Docker du Dockerhub pour la surcharger
 * avec le certificat de l'Active Directory,
 * et la pusher vers le dépôt VSCT (Artifactory).
 */

pipeline {
    agent {
        node {
            label 'docker'
        }
    }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }
    parameters {
        string(name: 'DOCKER_TAG', defaultValue: 'develop', description: 'Branch or version tag starting with a "v"')
    }
    stages {
        stage('Build docker image') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'artifactory-adm', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                        sh "docker login --username ${USERNAME} --password '${PASSWORD}' docker-vsct.pkg.cloud.socrate.vsct.fr"
                        sh "docker build --no-cache --pull --label tuyauterie_git_commit=${GIT_COMMIT} --build-arg http_proxy=${http_proxy} --build-arg https_proxy=${http_proxy} --build-arg DOCKER_TAG=${params.DOCKER_TAG} ./docker -t docker-vsct.pkg.cloud.socrate.vsct.fr/hesperides/vsct-hesperides:${params.DOCKER_TAG}"
                        sh "docker push docker-vsct.pkg.cloud.socrate.vsct.fr/hesperides/vsct-hesperides:${params.DOCKER_TAG}"
                    }
                }
            }
        }
    }
}
