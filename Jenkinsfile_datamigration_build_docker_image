#!groovy

pipeline {
    agent {
        node {
            label 'maven'
        }
    }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }
    triggers {
        // BEFORE deploy crons
        cron('0 3 * * 1-5')
    }
    parameters {
        string(name: 'GIT_BRANCH', defaultValue: 'master', description: 'identify source code version')
        string(name: 'DOCKER_TAG', defaultValue: 'master', description: "Docker tag's name")
    }
    stages {
        stage("Pull Project") {
            steps {
                script {
                    git(url: 'https://github.com/voyages-sncf-technologies/hesperides-data-migration.git',
                        branch: params.GIT_BRANCH)
                }
            }
        }
        stage('Build docker image') {
            steps {
                script {
                    withMaven(mavenSettingsConfig: 'global_maven_settings') {
                        withMaven(mavenSettingsConfig: 'local_maven_settings') { // use https://artifact.socrate.vsct.fr/artifactory/all-mvn as a mirror
                            sh "mvn help:effective-settings"
                            if (params.DOCKER_TAG.contains('.')) {
                                def pomVersion = params.DOCKER_TAG.startsWith('v') ? params.DOCKER_TAG.substring(1) : params.DOCKER_TAG
                                sh "sed -i 's~<version>.*-SNAPSHOT</version>~<version>${pomVersion}</version>~' pom.xml"
                            }
                            sh 'mvn clean package'
                        }
                    }
                    withCredentials([usernamePassword(credentialsId: 'usl_ci', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                        docker.withRegistry("https://hesperides-docker-all.artifact.cloud.socrate.vsct.fr") {
                            sh "docker login --username ${USERNAME} --password '${PASSWORD}' hesperides-docker-all.artifact.cloud.socrate.vsct.fr"
                            sh "docker build --force-rm --no-cache --pull --label git_commit=`git rev-parse --short HEAD` --label tuyauterie_git_commit=${GIT_COMMIT} --build-arg http_proxy=${http_proxy} --build-arg https_proxy=${http_proxy} . -t hesperides/hesperides-data-migration:${params.DOCKER_TAG}"
                            dockerImage = docker.image("hesperides/hesperides-data-migration:${params.DOCKER_TAG}")
                            dockerImage.push()
                        }
                    }
                }
            }
        }
    }
    post {
        always {
            deleteDir()
        }
    }
}
