#!groovy

pipeline {
    agent {
        node {
            label 'docker'
        }
    }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }
    stages {
        stage("Pull Project") {
            steps {
                script {
                    git(
                            url: 'https://github.com/voyages-sncf-technologies/hesperides-data-migration.git',
                            branch: 'master'
                    )
                }
            }
        }
        stage('Build docker image') {
            steps {
                script {
                    withMaven(mavenSettingsConfig: 'global_maven_settings') {
                        sh "mvn help:effective-settings"
                        sh 'mvn clean package'
                    }
                    withCredentials([usernamePassword(credentialsId: 'artifactory-adm', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                        docker.withRegistry("http://docker-vsct.pkg.cloud.socrate.vsct.fr") {
                            sh "docker login --username ${USERNAME} --password '${PASSWORD}' docker-vsct.pkg.cloud.socrate.vsct.fr"
                            sh "docker build --force-rm --no-cache --pull --build-arg http_proxy=${http_proxy} --build-arg https_proxy=${http_proxy} . -t hesperides/hesperides-data-migration:master"
                            dockerImage = docker.image("hesperides/hesperides-data-migration:master")
                            dockerImage.push()
                        }
                    }
                }
            }
        }
    }
    post {
        always {
            deleteDir()
        }
    }
}
