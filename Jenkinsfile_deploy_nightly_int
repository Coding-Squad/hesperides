#!groovy

@Library(["notifications"]) _

pipeline {
    agent {
        node {
            label 'default||master'
        }
    }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }
    triggers {
        // AFTER build crons
        cron('0 7 * * 1-5')
    }
    parameters {
        string(name: "PLATFORM", description: "OBLIGATOIRE : Plateforme sur laquelle sera fait le d√©ploiement", defaultValue: "INT1")
    }
    stages {
        stage('Launch nigthly job') {
            steps {
                build job: "deploy", parameters: [[$class: 'StringParameterValue', name: 'PLATFORM', value: params.PLATFORM]]
            }
        }
    }
    post {
        always {
            deleteDir()
        }
    }
}