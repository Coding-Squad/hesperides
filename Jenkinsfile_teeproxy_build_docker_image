#!groovy

pipeline {
    agent {
        node {
            label 'docker'
        }
    }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }
    triggers {
        // BEFORE deploy crons
        cron('0 2 * * 1-5')
    }
    parameters {
        string(name: 'GIT_BRANCH', defaultValue: 'master', description: 'identify source code version')
        string(name: 'DOCKER_TAG', defaultValue: 'master', description: "Docker tag's name")
    }
    stages {
        stage("Pull Project") {
            steps {
                script {
                    git(url: 'git@gitlab.socrate.vsct.fr:hesperides/teeproxy.git',
                        branch: params.GIT_BRANCH)
                }
            }
        }
        stage('Build docker image') {
            steps {
                script {
                    sh "docker build --force-rm --no-cache --pull --label git_commit=`git rev-parse --short HEAD` --label tuyauterie_git_commit=${GIT_COMMIT} --build-arg http_proxy=${http_proxy} --build-arg https_proxy=${http_proxy} . -t hesperides/teeproxy:${params.DOCKER_TAG}"
                }
            }
        }
        stage('Run unit tests') {
            steps {
                script {
                    sh "docker run --entrypoint /usr/bin/go hesperides/teeproxy:${params.DOCKER_TAG} test"
                }
            }
        }
        stage('Publish Docker image') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'artifact_admin', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                        docker.withRegistry("https://hesperides-docker-all.artifact.cloud.socrate.vsct.fr") {
                            sh "docker login --username ${USERNAME} --password '${PASSWORD}' hesperides-docker-all.artifact.cloud.socrate.vsct.fr"
                            dockerImage = docker.image("hesperides/teeproxy:${params.DOCKER_TAG}")
                            dockerImage.push()
                        }
                    }
                }
            }
        }
    }
    post {
        always {
            deleteDir()
        }
    }
}
