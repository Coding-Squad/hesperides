#!groovy

pipeline {
    agent {
        node {
            label 'docker'
        }
    }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }
    parameters {
        string(name: 'GIT_REF', defaultValue: 'master', description: 'git ref identifying source code version')
        string(name: 'DOCKER_TAG', defaultValue: 'master', description: 'Docker tag\'s name')
    }
    stages {
        stage("Pull Project") {
            steps {
                script {
                    git(url: 'git@gitlab.socrate.vsct.fr:hesperides/teeproxy.git',
                        credentialsId: 'jgit',
                        branch: params.GIT_REF)
                }
            }
        }
        stage('Build docker image') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'artifactory-adm', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                        docker.withRegistry("http://docker-vsct.pkg.cloud.socrate.vsct.fr") {
                            sh "docker login --username ${USERNAME} --password '${PASSWORD}' docker-vsct.pkg.cloud.socrate.vsct.fr"
                            sh "docker build --force-rm --no-cache --pull --label git_commit=${GIT_COMMIT} --build-arg http_proxy=${http_proxy} --build-arg https_proxy=${http_proxy} . -t hesperides/teeproxy:${params.DOCKER_TAG}"
                            dockerImage = docker.image("hesperides/teeproxy:${params.DOCKER_TAG}")
                            dockerImage.push()
                        }
                    }
                }
            }
        }
    }
    post {
        always {
            deleteDir()
        }
    }
}
